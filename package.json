    "prettier": "^3.6.2",
    "vitest": "^3.2.4"
  },
  "imports": {
    "#*": "./lib/*"
  },
  "peerDependencies": {
    "stylelint": ">=16.0.0",
    "tailwindcss": ">=3.0.0"
  },
  "dependencies": {
    "chokidar": "^4.0.3",
    "commander": "^14.0.0",
    "fs-extra": "^11.3.1",
    "js-yaml": "^4.1.0",
    "kleur": "^4.1.5",
    "zod": "^4.0.17"
