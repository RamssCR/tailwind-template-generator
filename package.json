{
  "name": "tailwind-template-generator",
  "version": "1.2.0",
  "main": "./bin/index.js",
  "type": "module",
  "bin": {
    "tailwind-template-generator": "./bin/index.js"
  },
  "scripts": {
    "start:dev": "node ./bin/index.js",
    "test": "vitest --watch --reporter=default --reporter=html",
    "test:coverage": "vitest --coverage",
    "build": "tsc --emitDeclarationOnly && tsc-alias",
    "prepublish": "npm run build"
  },
  "files": [
    "lib/",
    "bin/",
    "dist/",
    "*.d.ts"
  ],
  "types": "./types/index.d.ts",
  "keywords": [
    "tailwind",
    "css",
    "design tokens",
    "stylelint"
  ],
  "author": "RamssCR",
  "license": "MIT",
  "description": "A CLI tool to generate Tailwind CSS templates from design tokens",
  "devDependencies": {
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^24.3.0",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "eslint-plugin-tailwindcss": "^3.18.2",
    "prettier": "^3.6.2",
    "tsc-alias": "^1.8.16",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  },
  "imports": {
    "#*": "./lib/*"
  },
  "peerDependencies": {
    "stylelint": ">=16.0.0",
    "tailwindcss": ">=3.0.0"
  },
  "dependencies": {
    "chokidar": "^4.0.3",
    "commander": "^14.0.0",
    "fs-extra": "^11.3.1",
    "js-yaml": "^4.1.0",
    "kleur": "^4.1.5",
    "zod": "^4.0.17"
  }
}
