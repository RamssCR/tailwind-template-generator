{
  "name": "tailwind-template-generator",
  "version": "1.0.0",
  "main": "./bin/index.js",
  "type": "module",
  "bin": {
    "tailwind-template-generator": "./bin/index.js"
  },
  "scripts": {
    "start:dev": "node ./bin/index.js",
    "test": "vitest --watch --reporter=default --reporter=html",
    "test:coverage": "vitest --coverage"
